</script>

<script>
  const stepMap = {
    'Details Completed': 0,
    'Measurement Done': 1,
    'Quotation approved': 2,
    'Stiching Done': 3,
    'Delivery Pending': 4,
    'Order Delivered': 5
  };

  function updateProgress() {
    const selected = document.getElementById('statusSelect').value;
    const step = stepMap[selected];

    document.querySelectorAll('.wizard-progress .step').forEach((el, index) => {
      el.classList.remove('complete', 'in-progress');
      if (index < step) el.classList.add('complete');
      else if (index === step) el.classList.add('in-progress');
    });
  }

  // ✅ Set progress bar on initial page load
  window.onload = updateProgress;
</script>

