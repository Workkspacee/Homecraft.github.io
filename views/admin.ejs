<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="stylesheet" href="/admin.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">


    <script>
        let deleteId = null;
    
        function showDeletePopup(id) {
            deleteId = id;
            document.getElementById("deleteModal").style.display = "flex";
        }
    
        function closeModal() {
            document.getElementById("deleteModal").style.display = "none";
            deleteId = null;
        }
    
        document.getElementById("confirmDelete").addEventListener("click", function() {
            if (deleteId) {
                fetch(`/admin/delete/${deleteId}`, { method: 'DELETE' })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert("Work order deleted successfully!");
                            location.reload();
                        } else {
                            alert("Error deleting work order.");
                        }
                    })
                    .catch(err => console.error(err))
                    .finally(() => closeModal());
            }
        });
    </script>

</head>
<body>
    
    <div class="header1">
        <nav>
            <img src="/logo.png" alt="logo">
            <h3><a href="/logout">Log out</a></h3>
        </nav>
    </div>

    <center>
        <form class="container">
            <input type="text" class="input-field" placeholder="Enter order number here">
            <i class="fas fa-search"></i>
        </form>
    </center>

    <div class="work-no-list">
        <h2>All Work Orders</h2>
        <div class="work-orders">
            <% workNumbers.forEach(function(work) { %>
                <div class="work-order">
                    <span class="work-no"><%= work.work_no %></span> - <span class="work-name"><%= work.name %></span>
                    <a href="/admin/<%= work._id %>">View</a>
                    <i class="fas fa-trash delete-icon" onclick="showDeletePopup('<%= work._id %>')"></i>
                </div>
            <% }); %>  
        </div>
    </div>
    
    <!-- Custom Delete Confirmation Modal -->
    <div id="deleteModal" class="modal">
        <div class="modal-content">
            <p>Are you sure you want to delete this work order?</p>
            <div class="modal-buttons">
                <button id="confirmDelete" class="confirm-btn">Yes</button>
                <button onclick="closeModal()" class="cancel-btn">No</button>
            </div>
        </div>
    </div>

    <div class="footer">
        <nav>
            <p> &copy; 2024 All Rights Reserved.</p>
            <p>Designed with <i class="fas fa-heart" style="color:red"></i></p>
        </nav>
    </div>

</body>
</html>