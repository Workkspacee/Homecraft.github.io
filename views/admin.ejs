<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin</title>
    <link rel="stylesheet" href="/admin.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"/>

    <style>
        .suggestions-box { position: relative; z-index: 10; }
        .suggestion-item {
            background: #fff; padding: 5px; border: 1px solid #ccc; cursor: pointer;
        }
        .suggestion-item:hover { background: #f0f0f0; }
        .work-order { margin-bottom: 10px; }
        .delete-icon { color: red; cursor: pointer; margin-left: 10px; }
        .modal { display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%;
                 background: rgba(0,0,0,0.5); justify-content: center; align-items: center; z-index: 100; }
        .modal-content { background: white; padding: 30px; border-radius: 10px; text-align: center; }
        .confirm-btn, .cancel-btn { padding: 10px 20px; margin: 10px; }
    </style>

    <script>
        let deleteId = null;

        function showDeletePopup(id) {
            deleteId = id;
            document.getElementById("deleteModal").style.display = "flex";
        }

        function closeModal() {
            document.getElementById("deleteModal").style.display = "none";
            deleteId = null;
        }

        function confirmDelete() {
            if (deleteId) {
                fetch(`/admin/delete/${deleteId}`, { method: 'DELETE' })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            alert('Work order deleted successfully');
                            location.reload();
                        } else {
                            alert('Error deleting work order');
                        }
                    })
                    .catch(err => console.error(err));
                closeModal();
            }
        }

        async function fetchSuggestions(query) {
            if (!query) return document.getElementById("suggestions").innerHTML = "";
            try {
                const response = await fetch(`/admin/suggestions?query=${query}`);
                const data = await response.json();
                let html = '';
                data.forEach(work => {
                    html += `<div class="suggestion-item" onclick="selectWorkNo('${work.work_no}')">${work.work_no}</div>`;
                });
                document.getElementById("suggestions").innerHTML = html;
            } catch (err) {
                console.error("Autocomplete error:", err);
            }
        }

        function selectWorkNo(work_no) {
            document.getElementById("workNoInput").value = work_no;
            document.getElementById("suggestions").innerHTML = "";
        }
    </script>
</head>
<body>

<div class="header1">
    <nav>
        <img src="/logo.png" alt="logo">
        <h3><a href="/logout">Log out</a></h3>
    </nav>
</div>

<center>
    <!-- Search Form -->
    <form class="container" action="/admin/search" method="POST">
        <input type="text" id="workNoInput" name="work_no" class="input-field" placeholder="Enter work number"
               oninput="fetchSuggestions(this.value)" autocomplete="off" style="font-size: 20px;">
        <div id="suggestions" class="suggestions-box"></div>
        <button type="submit" class="search-btn"><i class="fas fa-search"></i></button>
    </form>
</center>

<!-- Search Result -->
<% if (searchedWork) { %>
    <div class="search-result">
        <div class="work-order">
            <a href="/admin/<%= searchedWork._id %>"><%= searchedWork.work_no %></a> -
            <span class="work-name"><%= searchedWork.name %></span>
            <i class="fas fa-trash delete-icon" onclick="showDeletePopup('<%= searchedWork._id %>')"></i>
        </div>
    </div>
<% } %>

<!-- All Work Orders -->
<div class="work-no-list">
    <h2>All Work Orders</h2>
    <div class="work-orders">
        <% workNumbers.forEach(work => { %>
            <div class="work-order">
                <a href="/admin/<%= work._id %>"><%= work.work_no %></a> - <span class="work-name"><%= work.name %></span>
                <i class="fas fa-trash delete-icon" onclick="showDeletePopup('<%= work._id %>')"></i>
            </div>
        <% }); %>
    </div>
</div>

<!-- Delete Modal -->
<div id="deleteModal" class="modal">
    <div class="modal-content">
        <i class='fas fa-exclamation-triangle' style='font-size:48px;color:orange'></i>
        <p class="modal-message">Are you sure you want to delete this order?</p>
        <p class="modal-subtext">You won't be able to retrieve it.</p>
        <button class="confirm-btn" onclick="confirmDelete()">Yes, delete</button>
        <button class="cancel-btn" onclick="closeModal()">Cancel</button>
    </div>
</div>

<div class="footer">
    <nav>
        <p>Â© 2024 All Rights Reserved.</p>
        <p>Designed with <i class="fas fa-heart" style="color:red"></i></p>
    </nav>
</div>

</body>
</html>
