<!DOCTYPE html>
<html lang="en" >
<head>
    <meta charset="UTF-8">
    <title>Backend</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" /> 
    <link rel="stylesheet" href="/backend.css">

    <style>
        .autocomplete-container {
            position: relative;
            width: 50%;
            max-width: 100px;
            margin: 0 auto;
        }

        .autocomplete-input {
            width: 100%;
            font-size: 18px;
            padding: 10px;
        }

        .autocomplete-items {
            position: absolute;
            z-index: 99;
            background-color: white;
            width: 41%;
            max-height: 100px;
            overflow-y: auto;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            border-radius: 4px;
        }

        .autocomplete-item {
            padding: 10px;
            cursor: pointer;
            font-size: 16px;
        }

        .autocomplete-item:hover {
            background-color: #f0f0f0;
        }

        @media (max-width: 600px) {
            .autocomplete-input {
            font-size: 16px;
            padding: 8px;
            }

            .autocomplete-item {
            font-size: 15px;
            }
        }
    </style>
    <script>
        function copyAddress() {
            const main = document.getElementById('main_address');
            const shipping = document.getElementById('shipping_address');
            const checkbox = document.getElementById('sameAddress');

            if (checkbox.checked) {
            shipping.value = main.value;
            shipping.readOnly = true; // optional
            } else {
            shipping.value = '';
            shipping.readOnly = false;
            }
        }
    </script>    


    <script>
  function copyAddress() {
    const main = document.getElementById('main_address');
    const shipping = document.getElementById('shipping_address');
    const checkbox = document.getElementById('sameAddress');

    if (checkbox.checked) {
      shipping.value = main.value;
      shipping.readOnly = true; // optional
    } else {
      shipping.value = '';
      shipping.readOnly = false;
    }
  }
</script>    

</head>
<body>

<% if (typeof popupMessage !== 'undefined' && popupMessage) { %>
