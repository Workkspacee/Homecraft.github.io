  </script>
<% } %>

<!-- partial:index.partial.html -->
    <div class="header1">
        <nav>
            <img src="/logo.png" alt="logo">
            <h3 style="font-weight: 700;"><a href="/logout">Log out</a></h3>
        </nav>
    </div>

    <br>
    <br>
    
    <div class="cont">

        <form method="post">
            <div class="form sign-up">
                <h2>View Work Order</h2>
                <label>
                    <span>Work Order No.</span>
